    <![endif]-->
  </head>
  <body>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/assets/bootstrap.min.js"></script>

    <div class="navbar navbar-default" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">BYU Dropbox</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand">BYU Dropbox</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li><a href="/home">Documents</a></li>
            <li><a href="/shared">Shared With Me</a></li>
            <li class="active"><a href="/users">User Search</a></li>
            <li data-no-turbolink><a href="/calendar">Calendar</a></li>
            <li><a href="/to-do">To-Do List</a></li>
            <li><a href="/signin">Sign In</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

  <form class="form-search">
    <div class="input-append" align="center">
        <input type="text" class="span2 search-query">
        <button type="submit" class="btn">Search</button>
    </div>
  </form>

  <div class="container">
  <table class="table">
  		<tbody align="center">
  		<% count = 0 %>
  		<tr>
  		<% searchUser("bob").each do |result| %>
  			<% if count == 4 %>
  			</tr>
  			<tr>
  			<% count = 0 %>
  			<% end %>
  			<td><a href="users/:<%= result -%>"><%= result -%></a></td>
  			<% count = count + 1 %>
  		<% end %>
        <% while count < 4%>
        <td></td>
        <% count = count + 1 %>
        <% end %>
        </tr>
        
        </tbody>
  </table>
  </div>




  </body>
</html>
